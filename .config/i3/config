##################################################################
##### -> Setting Mod Key, Default Terminal & Default Font <- #####
##################################################################

# Setting mod key to Super
set $mod 		Mod4
set $myterm 	xfce4-terminal
set $myBrowser	any-browser
font xft: pango:DejaVu Sans Mono 10


